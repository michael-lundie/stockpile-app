<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="-45"
            android:pivotX="100%"
            android:pivotY="3%"
            android:toDegrees="0" >
            <shape android:shape="rectangle" >
                <solid android:color="@color/design_default_color_error" />
            </shape>
        </rotate>
    </item>
    <item android:top="16dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/color_surface" />
            <corners android:radius="4dp" />
            <stroke android:width="2dp" android:color="@color/design_default_color_error"/>
        </shape>
    </item>
</layer-list>