<resources>

    <!-- Headline 1 conforms to Material guide for Title-->
    <style name="TextAppearance.Rice.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@string/font_family_light</item>
        <item name="android:textSize">@dimen/material_text_display4</item>
    </style>

    <!-- Headline 2 conforms to Material guide for Headline-->
    <style name="TextAppearance.Rice.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@string/font_family_light</item>
        <item name="android:textSize">@dimen/material_text_display3</item>
    </style>

    <!-- Headline 3-6 conforms to Material guide for Body 1-4-->
    <style name="TextAppearance.Rice.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@string/font_family_regular</item>
        <item name="android:textSize">@dimen/material_text_display2</item>
    </style>

    <style name="TextAppearance.Rice.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@string/font_family_regular</item>
        <item name="android:textSize">@dimen/material_text_display1</item>
    </style>

    <style name="TextAppearance.Rice.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@string/font_family_regular</item>
        <item name="android:textSize">@dimen/material_text_headline</item>
    </style>

    <style name="TextAppearance.Rice.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@string/font_family_medium</item>
        <item name="android:textSize">@dimen/material_text_title</item>
    </style>

    <!-- Subhead device -->
    <style name="TextAppearance.Rice.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@string/font_family_regular</item>
        <item name="android:textSize">@dimen/material_text_subhead</item>
    </style>

    <!-- Subhead desktop -->
    <style name="TextAppearance.Rice.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@string/font_family_regular</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.Rice.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@string/font_family_regular</item>
        <item name="android:textSize">@dimen/material_text_body1</item>
    </style>

    <style name="TextAppearance.Rice.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@string/font_family_medium</item>
        <item name="android:textSize">@dimen/material_text_body2</item>
    </style>

    <style name="TextAppearance.Rice.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@string/font_family_medium</item>
        <item name="android:capitalize">characters</item>
        <item name="android:textSize">@dimen/material_text_button</item>
    </style>

    <style name="TextAppearance.Rice.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <!--Your custom type style here-->
    </style>

    <style name="TextAppearance.Rice.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <!--Your custom type style here-->
    </style>

</resources>
