<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.homeview.HomeTargetsFragment">

    <data>
        <variable
            name="viewmodel"
            type="io.lundie.stockpile.features.homeview.HomeViewModel" />
        <variable
            name="handler"
            type="io.lundie.stockpile.features.homeview.HomeFragment" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:padding="@dimen/keyline_4"
                android:text="Inflation Test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_target_button"
                android:onClick="@{() -> handler.onAddTargetClicked()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Add Target"/>
        </LinearLayout>


    </FrameLayout>
</layout>